
package com.tugas_PBO;

public class Main {


    public static void main(String[] args) {

        for (int i = 1; i <= 4; i++){
            for (int k =0; k <=4; k++ ) {
                if (k == 0 || k == 2 || k == 4) {
                    System.out.print("X");
                } else {
                    System.out.print("0");
                }
            }
            System.out.println();
        }
    }
}
